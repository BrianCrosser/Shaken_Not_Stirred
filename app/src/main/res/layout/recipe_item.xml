<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cocktailThumb"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:contentDescription="@string/icon"
        />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cocktailThumb"
        android:paddingStart="25dp"
        android:paddingTop="25dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/ingredient1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cocktailThumb"
        android:layout_below="@id/nameText"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:textSize="12sp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/comma1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cocktailThumb"
        android:layout_below="@id/nameText"
        android:text=","
        android:layout_toRightOf="@id/ingredient1"
        android:paddingTop="5dp"
        android:textSize="12sp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/ingredient2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cocktailThumb"
        android:layout_below="@id/nameText"
        android:layout_toRightOf="@id/comma1"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:textSize="12sp"
        android:textColor="#000"
        />


    <TextView
        android:id="@+id/ellipsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cocktailThumb"
        android:layout_below="@id/nameText"
        android:text="..."
        android:layout_toRightOf="@id/ingredient2"
        android:paddingTop="5dp"
        android:textSize="12sp"
        android:textColor="#000"
        />


</RelativeLayout>