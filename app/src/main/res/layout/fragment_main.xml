<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.crosser.brian.shakennotstirred.activity.activity.MainActivityFragment"
    android:background="@mipmap/ic_background"
    >

    <TextView
        android:text="Random Cocktail*"
        android:textSize="35dp"
        android:textColor="#000"
        android:id="@+id/randomCocktail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        >
    </TextView>

    <TextView
        android:textSize="30dp"
        android:textColor="#000"
        android:id="@+id/randomCocktailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/randomCocktail"
        android:layout_centerHorizontal="true"
        >
    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/randomCocktailImage"
        android:layout_below="@id/randomCocktailText"
        />

    <ImageButton
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_bac"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        />
    <ImageButton
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_store"
        android:layout_above="@+id/button3"
        android:layout_alignParentEnd="true"
        />
    <ImageButton
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_cabinet"
        android:layout_above="@+id/button5"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_above="@id/button5"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_genius" />
    <ImageButton
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_above="@id/button2"
        android:src="@mipmap/ic_search"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
